<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- centerCrop: la imagen no se estira ni se pixelea -->
        <ImageView
            android:id="@+id/iv_foto_chofer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:background="@color/alpha_canal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:paddingLeft="@dimen/pd_horizontal_cardview"
            >
            <TextView
                android:id="@+id/tv_nombre_chofer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/size_text_driver"
                android:textColor="@color/white"
                />

                <TextView
                    android:id="@+id/tv_email_chofer"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_toRightOf="@+id/tv_email_chofer"
                    android:id="@+id/tv_celular_chofer"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    />




        </LinearLayout>



    </FrameLayout>
</LinearLayout>